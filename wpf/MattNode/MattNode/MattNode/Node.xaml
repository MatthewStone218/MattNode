<local:Instance x:Name="node" x:Class="MattNode.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MattNode"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300" Width="300" Height="200" Background="White" Cursor="" MouseDown="node_MouseDown">
    <Canvas>
        <Grid Width="300" Height="200" OpacityMask="Black"/>
        <Thumb x:Name="resizeThumb5" Width="10" Height="200" Background="Gray" DragDelta="resizeThumb5_DragDelta" HorizontalAlignment="Center" VerticalAlignment="Top" Cursor="SizeWE" DragCompleted="resizeThumb_DragCompleted"/>
        <Thumb x:Name="resizeThumb6" Width="300" Height="10" Background="Gray" DragDelta="resizeThumb6_DragDelta" HorizontalAlignment="Left" VerticalAlignment="Center" Cursor="SizeNS" Canvas.Top="190" DragCompleted="resizeThumb_DragCompleted"/>
        <Thumb x:Name="resizeThumb7" Width="10" Height="200" Background="Gray" DragDelta="resizeThumb7_DragDelta" HorizontalAlignment="Center" VerticalAlignment="Top" Cursor="SizeWE" Canvas.Left="290" DragCompleted="resizeThumb_DragCompleted"/>
        <Thumb x:Name="resizeThumb8" Width="300" Height="10" Background="Gray" DragDelta="resizeThumb8_DragDelta" HorizontalAlignment="Left" VerticalAlignment="Center" Cursor="SizeNS" DragCompleted="resizeThumb_DragCompleted"/>
        <Thumb x:Name="resizeThumb1" Width="10" Height="10" Background="Gray" DragDelta="resizeThumb1_DragDelta" HorizontalAlignment="Left" VerticalAlignment="Center" Cursor="SizeNWSE" DragCompleted="resizeThumb_DragCompleted"/>
        <Thumb x:Name="resizeThumb2" Canvas.Left="290" Width="10" Height="10" Background="Gray" DragDelta="resizeThumb2_DragDelta" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="SizeNESW" DragCompleted="resizeThumb_DragCompleted"/>
        <Thumb x:Name="resizeThumb3" Canvas.Top="190" Width="10" Height="10" Background="Gray" DragDelta="resizeThumb3_DragDelta" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="SizeNESW" DragCompleted="resizeThumb_DragCompleted"/>
        <Thumb x:Name="resizeThumb4" Canvas.Left="290" Canvas.Top="190" Width="10" Height="10" Background="Gray" DragDelta="resizeThumb4_DragDelta" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="SizeNWSE" DragCompleted="resizeThumb_DragCompleted"/>
    </Canvas>
</local:Instance>
