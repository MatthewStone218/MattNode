<local:Arrow x:Class="MattNode.NodeArrow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MattNode"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Line x:Name="arrowLine" X1="0" Y1="50" X2="100" Y2="50" Stroke="White" StrokeThickness="3" IsHitTestVisible="False"/>

        <Line x:Name="arrowHead1" X1="100" Y1="50" X2="90" Y2="40" Stroke="White" StrokeThickness="3" IsHitTestVisible="False"/>
        <Line x:Name="arrowHead2" X1="100" Y1="50" X2="90" Y2="60" Stroke="White" StrokeThickness="3" IsHitTestVisible="False"/>
    </Canvas>
</local:Arrow>
