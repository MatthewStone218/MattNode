<UserControl x:Class="MattNode.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MattNode"
             mc:Ignorable="d" 
             d:DesignHeight="18" d:DesignWidth="1920">
    <Grid>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="New File" Checked="NewProject"/>
                <MenuItem Header="Open File" Click="OpenProject"/>
                <MenuItem Header="Save File" Click="SaveProject"/>
                <MenuItem Header="Save File as" Click="SaveProjectAs"/>
            </MenuItem>
            <MenuItem Header="Property">
                <MenuItem Header="Modify Properties" Click="OpenPropertyMenu"/>
            </MenuItem>
            <MenuItem Header="Contact">
                <MenuItem Header="Copy Discord name" Click="CopyDiscordName"/>
                <MenuItem Header="Copy Gmail address" Click="CopyGmailAddress"/>
                <MenuItem Header="Copy KakaoTalk Link" Click="CopyKakaoTalkLink"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
