<UserControl x:Class="MattNode.Inspector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MattNode"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="400" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top" Height="1080">
    <Canvas x:Name="canvas" Background="#FFE4E4E4">
        <Label Content="Type" Margin="7,10,329,1025" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox x:Name="typeComboBox" TextBoxBase.TextChanged="typeComboBox_TextChanged" Margin="78,16,0,0" IsEditable="True" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="312">
            <ComboBoxItem Content="Option 1"/>
        </ComboBox>
        <TextBox x:Name="contentTextBox" HorizontalAlignment="Left" Height="984" Margin="0,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Canvas.Left="10" Canvas.Top="0" TextChanged="contentTextBox_TextChanged"/>
        <Thumb x:Name="resizeThumb" DragDelta="resizeThumb_DragDelta" HorizontalAlignment="Left" VerticalAlignment="Top" Height="1080" Width="10" Background="#FFF0F0F0" Cursor="SizeWE" Canvas.Left="390" Canvas.Top="0" Opacity="0"/>
    </Canvas>
</UserControl>
