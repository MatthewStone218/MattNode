<UserControl x:Class="MattNode.DoneWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MattNode"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Canvas x:Name="mainCanvas" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1920" Height="1080" Background="#7F000000">
        <Rectangle Height="500" Stroke="Black" Width="1000" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="460" Canvas.Top="290" Fill="#FFC4CED2"/>
        <Label Content="Done!" FontSize="48" VerticalAlignment="Top" HorizontalAlignment="Left" Canvas.Left="890" Canvas.Top="483" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="okButton" Content="OK" Height="74" Width="316" Canvas.Left="802" Canvas.Top="646" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="36" Click="Button_Click"/>
    </Canvas>
</UserControl>
